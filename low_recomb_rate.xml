<santa xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="santa.xsd">

        <replicates>1</replicates>

        <simulation>

            <genome>
                <length>3822</length>
	            <sequences>
                
                </sequences>   
           </genome>


            <population>
                <populationSize>100</populationSize>
                <inoculum>all</inoculum>
            </population>

            <populationType>dynamicPopulation</populationType>

            <growthModel>
                <growthRate>1.1</growthRate>
                <carryingPopulation>100000</carryingPopulation>
            </growthModel>  

            <fitnessFunction>                
                <purifyingFitness>                                    
                    <sites>1044-1047, 1098-1101, 3300-3303, 3498-3501</sites>
                    <rank>
                        <order>observed</order>
                        <breakTies>random</breakTies>
                    </rank>
                    <fitness>
                        <lowFitness>0.95</lowFitness>
                        <minimumFitness>0.2</minimumFitness>
                    </fitness>
                </purifyingFitness>
                <neutralFitness>
                    <sites>1-1043, 1048-1097, 1102-3299, 2304-3497, 3502-3822</sites>
                </neutralFitness>                             
            </fitnessFunction>

	        <mutator>
	            <nucleotideMutator>
	                <mutationRate>1E-4</mutationRate>
                    <indelmodel model="NB">0.4 1</indelmodel>
                    <insertprob>3.5E-1</insertprob>
                    <deleteprob>3.5E-1</deleteprob>
                    <!-- 1.0E-4 3E-2 2E-2 -->
	                <rateBias>
	                    0.42 2.49 0.29
	                    1.73 0.23 4.73
	                    6.99 0.20 0.60
	                    1.02 2.56 0.88
	                </rateBias>
	            </nucleotideMutator>
	        </mutator>

	        <replicator>
	            <recombinantReplicator>
			<dualInfectionProbability>0.1</dualInfectionProbability>
			<recombinationProbability>0.006</recombinationProbability>
		      </recombinantReplicator>
	        </replicator>

            <epoch>
                <name>epoch1</name>
                <generationCount>7500</generationCount>
            </epoch>

           
            <samplingSchedule>      
                
                <!-- Sample genotypes at certain times in FASTA Format -->
                <sampler>
                    <atFrequency>7500</atFrequency>
                    <fileName>alignment_0.fa</fileName>
                    <alignment>
                        <sampleSize>100</sampleSize>
                        <format>FASTA</format>
                        <label>seq_%g_%s</label>
                    </alignment>
                </sampler>   

            </samplingSchedule>

        </simulation>
</santa>
